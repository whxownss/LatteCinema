	<select id="getBoardList" parameterType="MemberDTO">
		SELECT *
		FROM MEMBERS
		ORDER BY MEM_ID DESC
		LIMIT #{startRow}, #{pageSize}
	</select>
	
	<select id="getBoardCount" parameterType="MemberDTO">
