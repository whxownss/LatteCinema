	<select id="getMember" parameterType="String" resultType="MemberDTO">
		SELECT *
		FROM MEMBERS
		WHERE MEM_ID = #{value}
	</select>	

<!-- 회원탈퇴 -->
	<delete id="deleteMember" parameterType="MemberDTO">
		DELETE FROM MEMBERS
		 WHERE MEM_ID = #{memId}
	</delete>
	
<!-- 	회원정보수정 -->
	<update id="updateMember" parameterType="MemberDTO">
		UPDATE MEMBERS
		SET 
<!-- 			MEM_PASS  = #{memPass} -->
		    MEM_PHONE = #{memPhone}
		  , MEM_EMAIL = #{memEmail}
		  , MEM_ADDRESS = #{memAddress}
		WHERE MEM_ID = #{memId}
	</update>
	
	<!-- 비밀번호 변경 -->
	<update id="updatePasswd" parameterType="MemberDTO">
		UPDATE MEMBERS
		SET
			MEM_PASS = #{memPass}
		WHERE MEM_ID = #{memId}
	</update>
	
	
